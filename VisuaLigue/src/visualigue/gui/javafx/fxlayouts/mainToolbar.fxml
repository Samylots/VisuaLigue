<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<ToolBar fx:id="toolbar" orientation="VERTICAL" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="visualigue.gui.javafx.fxcontrollers.MainToolbarController">
   <items>
      <ToggleButton fx:id="cursorButton" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" onAction="#cursorMode" prefWidth="50.0" text="ToggleButton">
         <graphic>
            <ImageView fitHeight="42.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@icons/cursor.png" />
               </image>
            </ImageView>
         </graphic>
         <padding>
            <Insets top="1.0" />
         </padding>
      </ToggleButton>
      <ToggleButton fx:id="addPlayerButton" contentDisplay="GRAPHIC_ONLY" graphicTextGap="0.0" mnemonicParsing="false" onAction="#addPlayerMode" text="addP">
         <graphic>
            <StackPane prefHeight="43.0" prefWidth="49.0">
               <children>
                  <ImageView fitHeight="37.0" fitWidth="41.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@icons/player.png" />
                     </image>
                  </ImageView>
                  <ImageView fitHeight="25.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true" translateX="6.0" translateY="10.0">
                     <image>
                        <Image url="@icons/add.png" />
                     </image>
                  </ImageView>
               </children>
            </StackPane>
         </graphic>
         <padding>
            <Insets top="1.0" />
         </padding>
      </ToggleButton>
      <ToggleButton fx:id="addAccessoryButton" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" onAction="#AddAccessoryMode" text="addAc">
         <graphic>
            <StackPane prefHeight="43.0" prefWidth="49.0">
               <children>
                  <ImageView fitHeight="37.0" fitWidth="41.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@icons/accessory.png" />
                     </image>
                  </ImageView>
                  <ImageView fitHeight="25.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true" translateX="6.0" translateY="10.0">
                     <image>
                        <Image url="@icons/add.png" />
                     </image>
                  </ImageView>
               </children>
            </StackPane>
         </graphic>
         <padding>
            <Insets top="1.0" />
         </padding>
      </ToggleButton>
      <ToggleButton fx:id="addObstacleButton" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" onAction="#addObstacleMode" text="ToggleButton">
         <graphic>
            <StackPane prefHeight="43.0" prefWidth="49.0">
               <children>
                  <ImageView fitHeight="37.0" fitWidth="41.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@icons/obstacle.png" />
                     </image>
                  </ImageView>
                  <ImageView fitHeight="25.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true" translateX="6.0" translateY="10.0">
                     <image>
                        <Image url="@icons/add.png" />
                     </image>
                  </ImageView>
               </children>
            </StackPane>
         </graphic>
         <padding>
            <Insets top="1.0" />
         </padding>
      </ToggleButton>
   </items>
</ToolBar>
