<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<ToolBar fx:id="toolbar" orientation="VERTICAL" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="visualigue.gui.javafx.fxcontrollers.PlayerToolbarController">
   <items>
      <Button mnemonicParsing="false" onAction="#unselect" prefHeight="45.0" prefWidth="50.0" text="Unselect">
         <graphic>
            <StackPane prefHeight="43.0" prefWidth="49.0">
               <children>
                  <ImageView fitHeight="37.0" fitWidth="41.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@icons/back.png" />
                     </image>
                  </ImageView>
               </children>
            </StackPane>
         </graphic>
         <padding>
            <Insets top="1.0" />
         </padding>
      </Button>
      <Button fx:id="roleButton" mnemonicParsing="false" onAction="#editRole" prefHeight="45.0" prefWidth="50.0" text="Set role">
         <graphic>
            <StackPane prefHeight="43.0" prefWidth="49.0">
               <children>
                  <ImageView fitHeight="37.0" fitWidth="41.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@icons/properties.png" />
                     </image>
                  </ImageView>
                  <ImageView fitHeight="25.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true" translateX="6.0" translateY="10.0">
                     <image>
                        <Image url="@icons/edit.png" />
                     </image>
                  </ImageView>
               </children>
            </StackPane>
         </graphic>
         <padding>
            <Insets top="1.0" />
         </padding>
      </Button>
      <Button fx:id="nameButton" mnemonicParsing="false" onAction="#editName" prefHeight="45.0" prefWidth="50.0" text="Set name">
         <graphic>
            <StackPane prefHeight="43.0" prefWidth="49.0">
               <children>
                  <ImageView fitHeight="37.0" fitWidth="299.0" pickOnBounds="true" preserveRatio="true" rotate="-90.0">
                     <image>
                        <Image url="@icons/tag.png" />
                     </image>
                  </ImageView>
                  <ImageView fitHeight="25.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true" translateX="8.0" translateY="6.0">
                     <image>
                        <Image url="@icons/edit.png" />
                     </image>
                  </ImageView>
               </children>
            </StackPane>
         </graphic>
         <padding>
            <Insets top="1.0" />
         </padding>
      </Button>
      <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#delete" prefHeight="45.0" prefWidth="50.0" text="Delete player">
         <graphic>
            <StackPane prefHeight="43.0" prefWidth="49.0">
               <children>
                  <ImageView fitHeight="37.0" fitWidth="41.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@icons/player.png" />
                     </image>
                  </ImageView>
                  <ImageView fitHeight="25.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true" translateX="6.0" translateY="10.0">
                     <image>
                        <Image url="@icons/delete.png" />
                     </image>
                  </ImageView>
               </children>
            </StackPane>
         </graphic>
         <padding>
            <Insets top="1.0" />
         </padding>
      </Button>
      <Button fx:id="unownButton" mnemonicParsing="false" onAction="#unownAccessory" prefHeight="45.0" prefWidth="50.0" text="Unown accessory">
         <graphic>
            <StackPane prefHeight="43.0" prefWidth="49.0">
               <children>
                  <ImageView fitHeight="37.0" fitWidth="41.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@icons/accessory.png" />
                     </image>
                  </ImageView>
                  <ImageView fitHeight="25.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true" translateX="6.0" translateY="10.0">
                     <image>
                        <Image url="@icons/delete.png" />
                     </image>
                  </ImageView>
               </children>
            </StackPane>
         </graphic>
         <padding>
            <Insets top="1.0" />
         </padding>
      </Button>
   </items>
</ToolBar>
